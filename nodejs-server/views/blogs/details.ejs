<html lang="en">
<%- include("../partials/head.ejs") %>

<body>
  <%- include("../partials/nav.ejs") %>


  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4 pt-3"></div>
    </div>
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4 offset-md-4">
        <a class="delete" data-doc="<%= blog._id %>" title="Delete"><i class="fa-solid fa-trash"></i></a>
      </div>
    </div>


    <div class="blogs content">
      <a class="go-back" href="/#Blogs"><i class="fa-solid fa-arrow-left-long"></i> Go back</a><br><br> 

      <h2 class="details-title"><%= blog.title %></h2>
      <h4 class="details-autho">Author: <%= blog.author %></h4> <br>
      <div class="content">

        <p><%= blog.body %></p>
        <br>
      </div>
    </div>   
   
  </div>


  <%- include("../partials/footer.ejs") %>

  <script>
    const trashcan = document.querySelector('a.delete');
    trashcan.addEventListener('click', (e) => {
      const endpoint = `/blogs/${trashcan.dataset.doc}`;
      fetch(endpoint, {
        method: 'DELETE',
      })
      .then(response => response.json())
      .then(data => window.location.href = data.redirect)
      .catch(err => console.log(err));
    });
    
  </script>
</body>
</html>